#!/bin/sh

if [ "x" = "x$1" ]; then
    echo "Usage: $0 tag"
    exit 1
fi

if ! which iocage >/dev/null 2>&1 ; then
    echo "ERROR: iocage not found."
    exit 1
fi

JAILNAME=${1}

UUID=$( iocage list | grep "${JAILNAME}$" | awk '{print $2}' )

if [ ! -e /iocage/jails/${UUID}/root ]; then
    echo "ERROR: jail path not found."
    exit 1
else
    echo "/iocage/jails/${UUID}/root"
fi
